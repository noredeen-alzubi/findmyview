<p id="notice"><%= notice %></p>

<div class="row justify-content-center">
  <div class="col-sm-8">
    <div class="card-deck">
      <% @stunning_views.each do |stunning_view| %>
        <a href="<%= stunning_view_path(stunning_view) %>" class="card mh-50">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1589825513188-72edada388d8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= stunning_view.title %></h5>
            <p class="card-text"><%= stunning_view.description %></p>
            <p class="card-text"><small class="text-muted">Posted <%= distance_of_time_in_words(Time.now, stunning_view.created_at) %> ago</small></p>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>

