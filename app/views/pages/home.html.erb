<div class="jumbotron jumbotron-fluid">
  <div class="col d-flex flex-column">
    <div class="container">
      <h1 class="display-4 title">Find Your Next Favorite Spot</h1>
      <h3 class="subtitle">Stop relying on word of mouth to find stunning views in Jordan.</h3>
    </div>
    <div class="container h-50">
    </div>
    <div class="container">
      <%= form_for :home, url: stunning_views_path, method: 'get', html:{class:"form-inline active-cyan-4"} do |form| %>
        <%= link_to "Find Nearby", stunning_views_path(nearby:true), class: "btn btn-primary btn-md btn-info main mr-2" %>
        <h5 class="mr-2"><strong>or start with a city:</strong></h5>
        <%= form.select :cities, City.all, {}, {id:"city-search", class:"form-control"} %>
        <%= form.submit ""  %>
      <% end  %>
    </div>
  </div>
</div>